<h1><%=@recipe.name%></h1>
<p><%=@recipe.ingredients%></p>
<p><%=@recipe.cook_time%></p>

<form method='POST' action='/recipes/<%=@recipe.id%>'>
    <p>Recipe Name:<input name='name' type='text'></p>
    <p>Ingredients:<input name='ingredients' type='text'></p>
    <p>Cook Time:<input name='cook_time' type='text'></p>
    <input id="hidden" type="submit" name="_method" value="patch">
</form>